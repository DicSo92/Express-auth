doctype html
html
    head
        title Page #{name}
        meta(charset='utf-8')
        link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css')
    body
        a.btn.btn-primary.m-2(href=`http://localhost:3000/signin`) Signin

        div.w-full.d-flex.flex-column.justify-center.align-items-center
            h1 Register
            form.w-75.mx-auto.mt-5(method='POST' action='/signup')
                div.form-group
                    label(for='name') User :
                    input#user.form-control(type='text', placeholder='Username...' name='name')
                div.form-group
                    label(for='email') Email :
                    input#email.form-control(type='email', placeholder='Email...' name='email')
                div.form-group
                    label(for='password') Password :
                    input#pw.form-control(type='password' name='password' placeholder="Password...")
                button.btn.btn-primary(type='submit') Register
